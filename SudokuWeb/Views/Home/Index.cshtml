@model SudokuModel
@{
    ViewData["Title"] = "Home Page";
    var rand = new Random();
    var degree = 2;
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<div class="text-center">
    <table>
        @for (int i = 0; i < Model.Sudoku.Positions.Length; i++)
        {
            <tr>
                @for (int j = 0; j < Model.Sudoku.Positions[i].Length; j++)
                {
                    <td>
                        <label>@($"{((rand.Next(degree) % degree == 0) ? " " : "" + Model.Sudoku.Positions[i][j])}")</label>
                    </td>
                }
                @if ((i + 1) % 3 == 0 && i != Model.Sudoku.Positions.Length - 1)
                {
                }
                else
                {
                }
            </tr>
        }
    </table>
</div>